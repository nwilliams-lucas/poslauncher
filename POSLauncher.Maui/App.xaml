<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:POSLauncher.Maui"
             xmlns:converters="clr-namespace:POSLauncher.Maui.Converters"
             x:Class="POSLauncher.Maui.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <converters:StatusToColorConverter x:Key="StatusToColorConverter" />
            
            <!-- Add namespace -->
            <x:String x:Key="namespaceDeclaration">clr-namespace:POSLauncher.Maui.Converters</x:String>
            
            <!-- Custom styles for the POS Launcher -->
            <Style x:Key="HeaderStyle" TargetType="Label">
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource White}}"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="Margin" Value="0,10,0,20"/>
            </Style>
            
            <Style x:Key="StatusCardStyle" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"/>
                <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Margin" Value="10,5"/>
                <Setter Property="Padding" Value="15"/>
                <Setter Property="HasShadow" Value="True"/>
            </Style>
            
            <Style x:Key="SuccessStatusStyle" TargetType="Frame" BasedOn="{StaticResource StatusCardStyle}">
                <Setter Property="BorderColor" Value="#4CAF50"/>
            </Style>
            
            <Style x:Key="ErrorStatusStyle" TargetType="Frame" BasedOn="{StaticResource StatusCardStyle}">
                <Setter Property="BorderColor" Value="#F44336"/>
            </Style>
            
            <Style x:Key="InProgressStatusStyle" TargetType="Frame" BasedOn="{StaticResource StatusCardStyle}">
                <Setter Property="BorderColor" Value="#FF9800"/>
            </Style>
            
            <Style x:Key="StatusTextStyle" TargetType="Label">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"/>
            </Style>
            
            <Style x:Key="StatusDescriptionStyle" TargetType="Label">
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray300}}"/>
                <Setter Property="Margin" Value="0,5,0,0"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>