<Window x:Class="POSLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="POS Launcher" 
        Height="450" 
        Width="600"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Icon="icon.ico">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="POS System Launcher" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       VerticalAlignment="Center"/>
            <TextBlock x:Name="StatusText" 
                       Text="Initializing..." 
                       FontSize="14" 
                       Margin="20,0,0,0" 
                       VerticalAlignment="Center"
                       Foreground="Blue"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="StatusPanel">
                <GroupBox Header="Service Status" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock x:Name="PostgreSQLStatus" 
                                   Text="PostgreSQL Database: Checking..." 
                                   Style="{StaticResource InProgressStyle}"/>
                        <TextBlock x:Name="FixedServiceStatus" 
                                   Text="JMC FIXED Service: Checking..." 
                                   Style="{StaticResource InProgressStyle}"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Application Launch" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock x:Name="CommerceClientStatus" 
                                   Text="Commerce_Client: Waiting for services..." 
                                   Style="{StaticResource StatusTextStyle}"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Startup Configuration">
                    <StackPanel>
                        <TextBlock x:Name="StartupStatus" 
                                   Text="Startup Registration: Checking..." 
                                   Style="{StaticResource StatusTextStyle}"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="RetryButton" 
                    Content="Retry All" 
                    Width="80" 
                    Height="30" 
                    Margin="0,0,10,0"
                    Click="RetryButton_Click"
                    IsEnabled="False"/>
            <Button x:Name="ConfigureButton" 
                    Content="Configure" 
                    Width="80" 
                    Height="30" 
                    Margin="0,0,10,0"
                    Click="ConfigureButton_Click"/>
            <Button x:Name="CloseButton" 
                    Content="Close" 
                    Width="80" 
                    Height="30" 
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>