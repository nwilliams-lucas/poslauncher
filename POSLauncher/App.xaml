<Application x:Class="POSLauncher.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Window">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        
        <Style x:Key="StatusTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>
        
        <Style x:Key="SuccessStyle" TargetType="TextBlock" BasedOn="{StaticResource StatusTextStyle}">
            <Setter Property="Background" Value="#E8F5E8"/>
            <Setter Property="Foreground" Value="#2E7D32"/>
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <Style x:Key="ErrorStyle" TargetType="TextBlock" BasedOn="{StaticResource StatusTextStyle}">
            <Setter Property="Background" Value="#FFEBEE"/>
            <Setter Property="Foreground" Value="#C62828"/>
            <Setter Property="BorderBrush" Value="#F44336"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <Style x:Key="InProgressStyle" TargetType="TextBlock" BasedOn="{StaticResource StatusTextStyle}">
            <Setter Property="Background" Value="#FFF3E0"/>
            <Setter Property="Foreground" Value="#E65100"/>
            <Setter Property="BorderBrush" Value="#FF9800"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Application.Resources>
</Application>