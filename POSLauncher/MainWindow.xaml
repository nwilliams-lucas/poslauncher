<Window x:Class="POSLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="POS Launcher" 
        Height="450" 
        Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="POS System Launcher" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       VerticalAlignment="Center"/>
            <TextBlock x:Name="StatusText" 
                       Text="Initializing..." 
                       FontSize="14" 
                       Margin="20,0,0,0" 
                       VerticalAlignment="Center"
                       Foreground="Blue"/>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Service Status" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock x:Name="PostgreSQLStatus" 
                       Text="PostgreSQL Database: Checking..." 
                       FontSize="14" Margin="10,5" Padding="10,5" 
                       Background="LightGray"/>
            <TextBlock x:Name="FixedServiceStatus" 
                       Text="JMC FIXED Service: Checking..." 
                       FontSize="14" Margin="10,5" Padding="10,5" 
                       Background="LightGray"/>
            <TextBlock x:Name="CommerceClientStatus" 
                       Text="Commerce_Client: Waiting for services..." 
                       FontSize="14" Margin="10,5" Padding="10,5" 
                       Background="LightGray"/>
            <TextBlock x:Name="StartupStatus" 
                       Text="Startup Registration: Checking..." 
                       FontSize="14" Margin="10,5" Padding="10,5" 
                       Background="LightGray"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="RetryButton" 
                    Content="Retry All" 
                    Width="80" 
                    Height="30" 
                    Margin="0,0,10,0"
                    Click="RetryButton_Click"
                    IsEnabled="False"/>
            <Button x:Name="ConfigureButton" 
                    Content="Configure" 
                    Width="80" 
                    Height="30" 
                    Margin="0,0,10,0"
                    Click="ConfigureButton_Click"/>
            <Button x:Name="CloseButton" 
                    Content="Close" 
                    Width="80" 
                    Height="30" 
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>